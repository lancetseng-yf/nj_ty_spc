<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Max Pressure vs Max Speed</title>

    <link rel="stylesheet" href="/libs/nouislider/nouislider.min.css" />
    <script src="/libs/echarts/echarts.min.js"></script>
    <script src="/libs/nouislider/nouislider.min.js"></script>
    <script src="/libs/wnumb/wNumb.min.js"></script>
    <link rel="stylesheet" href="/libs/material-icons/material-icons.css" />
    <link rel="stylesheet" href="/libs/bootstrap/bootstrap.min.css" />
    <script src="/libs/bootstrap/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/psmax.css" />
  </head>
  <body>
    <h1>最大速度與最大壓力圖</h1>

    <!-- Loading Spinner -->
    <%- include("partials/loading") %>

    <!-- Main Content (hidden until data loaded) -->
    <div id="main-content" style="display: none">
      <div id="controls">
        <%- include("partials/_product-dropbox") %>
        <%-include("partials/_countdown-control") %>
        <%-include("partials/_hide-manual-control") %>
      </div>
    </div>

    <div class="collapse" id="manual-control">
      <div class="controls"><%- include("partials/_datetimepicker") %></div>
      <div class="controls">
        <table id="limitsTable">
          <thead>
            <tr>
              <th></th>
              <th>管制下限</th>
              <th>管制上限</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><b>速度</b></td>
              <td>
                <input
                  class="form-control"
                  type="number"
                  id="speedLCL"
                  value=""
                />
              </td>
              <td>
                <input
                  class="form-control"
                  type="number"
                  id="speedUCL"
                  value=""
                />
              </td>
              <!-- Merge this cell across 2 rows -->
              <td
                rowspan="2"
                style="text-align: center; vertical-align: middle"
              >
                <button id="applyLimitsBtn">更新圖表</button>
              </td>
            </tr>
            <tr>
              <td><b>壓力</b></td>
              <td>
                <input
                  class="form-control"
                  type="number"
                  id="pressureLCL"
                  value=""
                />
              </td>
              <td>
                <input
                  class="form-control"
                  type="number"
                  id="pressureUCL"
                  value=""
                />
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- statistic data -->
    <div class="controls">
      <table id="statsTable">
        <thead>
          <tr>
            <th>產品</th>
            <th>狀態</th>
            <th>數量</th>
            <th>總數</th>
            <th>百分比(%)</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>

    <div id="chart"></div>
    <div id="rangeLabel"></div>
    <div id="timeSlider"></div>

    <script src="/js/psmax.js"></script>
  </body>
</html>
