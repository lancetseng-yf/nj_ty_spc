<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>PPS Batch - Diecasting Data</title>
    <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
           <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="/css/pps-batch.css">
  </head>
  <body>
    <div class="controls">
      <h1 class="mb-4">Diecasting Eigenvalue Data Chart - Batch(Latest 10 Shots)</h1>

      <!-- Dropdown -->
      <div id="controls">
        <label for="productSelect">Select Product:</label>
        <select id="productSelect">
          <% ["LL","LR","ML","MR","ZP"].forEach(p => { %>
            <option value="<%= p %>" <%= p === type ? "selected" : "" %>><%= p %></option>
          <% }) %>
        </select>

        <span id="countdown">Refreshing in: -s</span>
        <button id="refreshControl" title="Pause/Start">
          <span class="material-icons" id="refreshIcon">pause</span>
        </button>
      </div>
    <!-- Loading Partial -->
    <%- include('partials/loading') %>

    <!-- Chart -->
    <div id="chart"></div>

 <script src="/js/pps-batch.js"></script>

  </body>
</html>
