<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Diecasting Chart</title>
    <link rel="stylesheet" href="/css/pps-single.css">
    <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <h1>Diecasting Eigenvalue Chart (Latest 100 Shots)</h1>

    <%- include("partials/loading") %>

    <div id="controls">
      <label for="productSelect">Select Product:</label>
      <select id="productSelect">
        <% ["LL","LR","ML","MR"].forEach(p => { %>
          <option value="<%= p %>" <%= p === type ? "selected" : "" %>><%= p %></option>
        <% }) %>
      </select>
      <button id="prevBtn">⬅ Previous</button>
      <button id="nextBtn">Next ➡</button>

      <span id="countdown">Refreshing in: -s</span>
      <button id="refreshControl" title="Pause/Start">
        <span class="material-icons" id="refreshIcon">pause</span>
      </button>
    </div>

    <div id="datapicker-control" >
       <%- include("partials/_datetimepicker") %>
    </div>

    <div id="chart"></div>

    <script src="/js/pps-single.js"></script>
  </body>
</html>
