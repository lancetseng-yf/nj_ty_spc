              <% ["","6000T"].forEach(p => { %>
                <option value="<%= p %>" <%= p === type ? "selected" : "" %>><%= p %></option>
              <% }) %>
           </select>
        <button>Filter</button>
       
      </div>
      <div class="grid-wrapper">
